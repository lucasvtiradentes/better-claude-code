{
  "name": "better-claude-code",
  "version": "0.0.2",
  "description": "Better Claude Code - CLI auxiliary tools for Claude Code",
  "type": "module",
  "main": "./dist/cli/cli.js",
  "bin": {
    "bcc": "./dist/cli/cli.js",
    "better-cloude-code": "./dist/cli/cli.js"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "claude-code",
    "cli",
    "tools",
    "productivity"
  ],
  "author": "Lucas Vieira",
  "license": "MIT",
  "scripts": {
    "dev": "tsx src/cli.ts",
    "typecheck": "tsc --noEmit",
    "build": "rimraf ./dist && tsc",
    "postbuild": "pnpm run update-docs && pnpm run copy-server-files",
    "update-docs": "tsx scripts/update-docs.ts",
    "copy-server-files": "tsx scripts/copy-server-files.ts",
    "package:preview": "npm pack --dry-run"
  },
  "dependencies": {
    "@better-claude-code/backend": "workspace:*",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^22.18.8",
    "rimraf": "^5.0.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
