{
  "name": "better-claude-code",
  "version": "0.0.22",
  "description": "CLI auxiliary tools for Claude Code",
  "type": "module",
  "main": "./dist/apps/cli/src/main.js",
  "bin": {
    "bcc": "./dist/apps/cli/src/main.js",
    "better-cloude-code": "./dist/apps/cli/src/main.js"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "claude-code",
    "cli",
    "tools",
    "productivity"
  ],
  "author": "Lucas Vieira",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "start": "node dist/apps/cli/src/main.js",
    "dev": "tsx src//main.ts",
    "typecheck": "tsc --noEmit",
    "build": "rimraf ./dist && tsc",
    "postbuild": "tsx scripts/postbuild.ts && pnpm run update-docs",
    "update-docs": "tsx scripts/update-docs.ts",
    "package:preview": "npm pack --dry-run"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "@hono/node-server": "^1.19.6",
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^1.1.4",
    "hono": "^4.10.4",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@better-claude-code/shared": "workspace:*",
    "@better-claude-code/backend": "workspace:*",
    "@better-claude-code/node-utils": "workspace:*",
    "@types/node": "^22.18.8",
    "rimraf": "^5.0.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
