{
  "name": "@better-claude-code/backend",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./dist/main.js",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "rimraf ./dist && tsc",
    "postbuild": "tsx scripts/postbuild.ts && npm run script:swagger",
    "script:swagger": "tsx scripts/generate-swagger.ts",
    "start": "node dist/main.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@better-claude-code/node-utils": "workspace:*",
    "@better-claude-code/shared": "workspace:*",
    "@hono/node-server": "^1.19.6",
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^1.1.4",
    "hono": "^4.10.4",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^22.18.8",
    "rimraf": "^5.0.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
