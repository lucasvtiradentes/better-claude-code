{
  "schema": "https://unpkg.com/tscanner/schema.json",
  "builtinRules": {
    "no-any-type": { "severity": "error" },
    "no-var": {},
    "prefer-type-over-interface": {},
    "no-constant-condition": {},
    "no-duplicate-imports": {},
    "no-unreachable-code": {},
    "no-relative-imports": {},
    "no-absolute-imports": {},
    "max-function-length": {},
    "no-nested-ternary": {},
    "no-nested-require": {},
    "no-empty-function": {},
    "no-dynamic-import": {},
    "consistent-return": {},
    "no-todo-comments": {},
    "no-magic-numbers": {},
    "no-alias-imports": {},
    "no-implicit-any": {},
    "no-unused-vars": {},
    "no-empty-class": {},
    "no-console-log": { "severity": "error" },
    "prefer-const": {}
  },
  "customRules": {},
  "include": [
    "**/*.{ts,tsx}"
  ],
  "exclude": [
    "node_modules/**",
    "dist/**",
    "build/**",
    ".git/**"
  ]
}