{
	"name": "better-claude-code-vscode",
	"displayName": "Better Claude Code",
	"description": "Manage and analyze Claude Code sessions directly in VS Code",
	"version": "1.0.4",
	"private": true,
	"publisher": "lucasvtiradentes",
	"icon": "resources/icon.png",
	"engines": {
		"vscode": "^1.100.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"scripts": {
		"build": "tsx esbuild.config.ts",
		"postbuild": "tsx scripts/postbuild.ts && tsx scripts/install-local.ts",
		"dev": "tsx esbuild.config.ts --watch",
		"typecheck": "tsc --noEmit",
		"vscode:prepublish": "pnpm run build",
		"vscode:package": "vsce package --no-dependencies",
		"vscode:publish": "vsce publish --no-dependencies"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/lucasvtiradentes/better-claude-code.git",
		"directory": "src"
	},
	"bugs": {
		"url": "https://github.com/lucasvtiradentes/better-claude-code/issues"
	},
	"homepage": "https://github.com/lucasvtiradentes/better-claude-code#readme",
	"keywords": [
		"claude",
		"claude-code",
		"ai",
		"sessions",
		"productivity"
	],
	"dependencies": {
		"@better-claude-code/node-utils": "workspace:*",
		"@better-claude-code/shared": "workspace:*",
		"@better-claude-code/ui-components": "workspace:*",
		"lucide-react": "^0.552.0",
		"react": "^19.0.0",
		"react-dom": "^19.0.0"
	},
	"devDependencies": {
		"@tailwindcss/postcss": "^4.1.17",
		"@types/node": "^22.18.8",
		"@types/react": "^19.0.6",
		"@types/react-dom": "^19.0.3",
		"@types/vscode": "^1.100.0",
		"autoprefixer": "^10.4.22",
		"esbuild": "^0.24.2",
		"postcss": "^8.5.6",
		"tailwindcss": "^4.1.17",
		"tsx": "^4.20.6",
		"typescript": "^5.7.3"
	},
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "bccExplorer",
					"title": "Claude Code Sessions",
					"icon": "resources/icon.svg"
				}
			]
		},
		"views": {
			"bccExplorer": [
				{
					"id": "bccSessionExplorer",
					"name": "Sessions",
					"contextualTitle": "Claude Code Sessions"
				}
			]
		},
		"commands": [
			{
				"command": "bcc.refreshSessions",
				"title": "Refresh Sessions",
				"category": "BCC",
				"icon": "$(refresh)"
			},
			{
				"command": "bcc.compactSession",
				"title": "Compact Session",
				"category": "BCC",
				"icon": "$(archive)"
			},
			{
				"command": "bcc.filterSessions",
				"title": "Group Sessions",
				"category": "BCC",
				"icon": "$(group-by-ref-type)"
			},
			{
				"command": "bcc.openSessionFile",
				"title": "Open Session File",
				"category": "BCC"
			},
			{
				"command": "bcc.copySessionPath",
				"title": "Copy Session Path",
				"category": "BCC"
			},
			{
				"command": "bcc.showLogs",
				"title": "Show Logs",
				"category": "BCC",
				"icon": "$(output)"
			},
			{
				"command": "bcc.addLabel",
				"title": "Add Label",
				"category": "BCC",
				"icon": "$(tag)"
			},
			{
				"command": "bcc.toggleCollapseExpand",
				"title": "Toggle Collapse/Expand All Groups",
				"category": "BCC",
				"icon": "$(fold)"
			},
			{
				"command": "bcc.viewCompaction",
				"title": "View Compaction",
				"category": "BCC",
				"icon": "$(eye)"
			},
			{
				"command": "bcc.togglePinSession",
				"title": "Pin/Unpin Session",
				"category": "BCC",
				"icon": "$(pin)"
			},
			{
				"command": "bcc.batchCompact",
				"title": "Compact Selected Sessions",
				"category": "BCC",
				"icon": "$(archive)"
			},
			{
				"command": "bcc.batchDelete",
				"title": "Delete Selected Sessions",
				"category": "BCC",
				"icon": "$(trash)"
			},
			{
				"command": "bcc.batchAddLabel",
				"title": "Add Label to Selected Sessions",
				"category": "BCC",
				"icon": "$(tag)"
			},
			{
				"command": "bcc.toggleCheckSession",
				"title": "Check/Uncheck Session",
				"category": "BCC",
				"icon": "$(check)"
			},
			{
				"command": "bcc.clearAllChecks",
				"title": "Clear All Checks",
				"category": "BCC",
				"icon": "$(clear-all)"
			},
			{
				"command": "bcc.batchOperationsMenu",
				"title": "Batch Operations",
				"category": "BCC",
				"icon": "$(checklist)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "bcc.batchOperationsMenu",
					"when": "view == bccSessionExplorer && bcc.hasCheckedSessions",
					"group": "navigation@1"
				},
				{
					"command": "bcc.refreshSessions",
					"when": "view == bccSessionExplorer",
					"group": "navigation@2"
				},
				{
					"command": "bcc.filterSessions",
					"when": "view == bccSessionExplorer",
					"group": "navigation@3"
				},
				{
					"command": "bcc.toggleCollapseExpand",
					"when": "view == bccSessionExplorer",
					"group": "navigation@4"
				}
			],
			"view/item/context": [
				{
					"command": "bcc.viewCompaction",
					"when": "view == bccSessionExplorer && viewItem == sessionItemWithCompaction",
					"group": "inline@1"
				},
				{
					"command": "bcc.addLabel",
					"when": "view == bccSessionExplorer && viewItem == sessionItemWithCompaction",
					"group": "inline@2"
				},
				{
					"command": "bcc.togglePinSession",
					"when": "view == bccSessionExplorer && viewItem == sessionItemWithCompaction",
					"group": "inline@3"
				},
				{
					"command": "bcc.toggleCheckSession",
					"when": "view == bccSessionExplorer && viewItem == sessionItemWithCompaction",
					"group": "inline@4"
				},
				{
					"command": "bcc.compactSession",
					"when": "view == bccSessionExplorer && viewItem == sessionItem",
					"group": "inline@1"
				},
				{
					"command": "bcc.addLabel",
					"when": "view == bccSessionExplorer && viewItem == sessionItem",
					"group": "inline@2"
				},
				{
					"command": "bcc.togglePinSession",
					"when": "view == bccSessionExplorer && viewItem == sessionItem",
					"group": "inline@3"
				},
				{
					"command": "bcc.toggleCheckSession",
					"when": "view == bccSessionExplorer && viewItem == sessionItem",
					"group": "inline@4"
				},
				{
					"command": "bcc.toggleCheckSession",
					"when": "view == bccSessionExplorer && viewItem == sessionItemChecked",
					"group": "inline@1"
				},
				{
					"command": "bcc.batchCompact",
					"when": "view == bccSessionExplorer && (viewItem == sessionItem || viewItem == sessionItemWithCompaction)",
					"group": "2_batch@1"
				},
				{
					"command": "bcc.batchDelete",
					"when": "view == bccSessionExplorer && (viewItem == sessionItem || viewItem == sessionItemWithCompaction)",
					"group": "2_batch@2"
				},
				{
					"command": "bcc.batchAddLabel",
					"when": "view == bccSessionExplorer && (viewItem == sessionItem || viewItem == sessionItemWithCompaction)",
					"group": "2_batch@3"
				},
				{
					"command": "bcc.openSessionFile",
					"when": "view == bccSessionExplorer && (viewItem == sessionItem || viewItem == sessionItemWithCompaction)",
					"group": "3_navigation@1"
				},
				{
					"command": "bcc.copySessionPath",
					"when": "view == bccSessionExplorer && (viewItem == sessionItem || viewItem == sessionItemWithCompaction)",
					"group": "3_navigation@2"
				}
			]
		},
		"keybindings": []
	}
}
