<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Claude Code Sessions Viewer</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      height: 100vh;
      display: flex;
      background: #1e1e1e;
      color: #d4d4d4;
    }

    .sidebar {
      width: 280px;
      background: #252526;
      border-right: 1px solid #3e3e42;
      display: flex;
      flex-direction: column;
    }

    .sidebar-header {
      padding: 16px;
      border-bottom: 1px solid #3e3e42;
      font-weight: 600;
      font-size: 14px;
      color: #cccccc;
    }

    .repo-list {
      flex: 1;
      overflow-y: auto;
    }

    .repo-item {
      padding: 12px 16px;
      cursor: pointer;
      border-bottom: 1px solid #2d2d30;
      transition: background 0.1s;
    }

    .repo-item:hover {
      background: #2a2d2e;
    }

    .repo-item.active {
      background: #094771;
    }

    .repo-name {
      font-size: 14px;
      font-weight: 600;
      margin-bottom: 4px;
      word-break: break-word;
    }

    .repo-path {
      font-size: 11px;
      color: #858585;
      margin-bottom: 6px;
      word-break: break-all;
      font-family: 'Courier New', monospace;
    }

    .repo-meta {
      font-size: 11px;
      color: #858585;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .git-badge {
      background: #0e639c;
      color: #fff;
      padding: 2px 6px;
      border-radius: 3px;
      font-size: 10px;
      font-weight: 600;
      text-transform: uppercase;
      margin-left: auto;
    }

    .main {
      flex: 1;
      display: flex;
      overflow: hidden;
    }

    .sessions-panel {
      width: 400px;
      border-right: 1px solid #3e3e42;
      display: flex;
      flex-direction: column;
    }

    .sessions-header {
      padding: 16px;
      border-bottom: 1px solid #3e3e42;
      font-weight: 600;
      font-size: 14px;
    }

    .session-list {
      flex: 1;
      overflow-y: auto;
    }

    .session-item {
      padding: 12px 16px;
      cursor: pointer;
      border-bottom: 1px solid #2d2d30;
      transition: background 0.1s;
    }

    .session-item:hover {
      background: #2a2d2e;
    }

    .session-item.active {
      background: #094771;
    }

    .session-title {
      font-size: 13px;
      margin-bottom: 6px;
      line-height: 1.4;
    }

    .session-meta {
      font-size: 11px;
      color: #858585;
      display: flex;
      gap: 12px;
    }

    .detail-panel {
      flex: 1;
      display: flex;
      flex-direction: column;
      overflow: hidden;
    }

    .detail-header {
      padding: 16px;
      border-bottom: 1px solid #3e3e42;
      font-weight: 600;
      font-size: 14px;
    }

    .messages {
      flex: 1;
      overflow-y: auto;
      padding: 16px;
    }

    .message {
      margin-bottom: 24px;
      padding: 16px;
      border-radius: 6px;
      line-height: 1.6;
      white-space: pre-wrap;
      word-wrap: break-word;
    }

    .message.user {
      background: #0e639c;
      margin-left: 40px;
    }

    .message.assistant {
      background: #1a1a1a;
      border: 1px solid #3e3e42;
      margin-right: 40px;
    }

    .message-header {
      font-size: 11px;
      font-weight: 600;
      margin-bottom: 8px;
      opacity: 0.7;
      text-transform: uppercase;
    }

    .empty-state {
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100%;
      color: #858585;
      font-size: 14px;
    }

    ::-webkit-scrollbar {
      width: 10px;
      height: 10px;
    }

    ::-webkit-scrollbar-track {
      background: #1e1e1e;
    }

    ::-webkit-scrollbar-thumb {
      background: #424242;
      border-radius: 4px;
    }

    ::-webkit-scrollbar-thumb:hover {
      background: #4e4e4e;
    }

    .loading {
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100%;
      color: #858585;
    }
  </style>
</head>
<body>
  <div class="sidebar">
    <div class="sidebar-header">Repositories</div>
    <div class="repo-list" id="repoList">
      <div class="loading">Loading repositories...</div>
    </div>
  </div>

  <div class="main">
    <div class="sessions-panel">
      <div class="sessions-header" id="sessionsHeader">Sessions</div>
      <div class="session-list" id="sessionList">
        <div class="empty-state">Select a repository</div>
      </div>
    </div>

    <div class="detail-panel">
      <div class="detail-header" id="detailHeader">Messages</div>
      <div class="messages" id="messages">
        <div class="empty-state">Select a session</div>
      </div>
    </div>
  </div>

  <script>
    let currentRepo = null;
    let currentSession = null;

    async function loadRepos() {
      try {
        const res = await fetch('/api/repos');
        const data = await res.json();

        const repoList = document.getElementById('repoList');

        if (data.repos.length === 0) {
          repoList.innerHTML = '<div class="empty-state">No repositories found</div>';
          return;
        }

        repoList.innerHTML = data.repos.map(repo => {
          const escapedName = repo.name.replace(/'/g, '&#39;');
          return `
            <div class="repo-item" onclick="selectRepo('${repo.id}', '${escapedName}')">
              <div class="repo-name">${repo.name}</div>
              <div class="repo-path">${repo.fullPath}</div>
              <div class="repo-meta">
                <span>${repo.sessionCount} sessions</span>
                ${repo.isGitRepo ? '<span class="git-badge">git repo</span>' : ''}
              </div>
            </div>
          `;
        }).join('');
      } catch (error) {
        document.getElementById('repoList').innerHTML = '<div class="empty-state">Error loading repos</div>';
      }
    }

    async function selectRepo(repoId, repoName) {
      currentRepo = repoId;
      currentSession = null;

      document.querySelectorAll('.repo-item').forEach(el => el.classList.remove('active'));
      event.target.closest('.repo-item').classList.add('active');

      document.getElementById('sessionsHeader').textContent = `Sessions - ${repoName}`;
      document.getElementById('sessionList').innerHTML = '<div class="loading">Loading sessions...</div>';
      document.getElementById('messages').innerHTML = '<div class="empty-state">Select a session</div>';

      try {
        const res = await fetch(`/api/sessions/${encodeURIComponent(repoId)}`);
        const data = await res.json();

        const sessionList = document.getElementById('sessionList');

        if (data.sessions.length === 0) {
          sessionList.innerHTML = '<div class="empty-state">No sessions found</div>';
          return;
        }

        sessionList.innerHTML = data.sessions.map(session => {
          const date = new Date(session.timestamp).toLocaleDateString();
          const tokenBadge = session.tokenPercentage ? `${session.tokenPercentage}%` : '';

          return `
            <div class="session-item" onclick="selectSession('${session.id}')">
              <div class="session-title">${session.title}</div>
              <div class="session-meta">
                <span>${session.userCount} you</span>
                <span>${session.assistantCount} cc</span>
                ${tokenBadge ? `<span>${tokenBadge}</span>` : ''}
                <span>${date}</span>
              </div>
            </div>
          `;
        }).join('');
      } catch (error) {
        document.getElementById('sessionList').innerHTML = '<div class="empty-state">Error loading sessions</div>';
      }
    }

    async function selectSession(sessionId) {
      currentSession = sessionId;

      document.querySelectorAll('.session-item').forEach(el => el.classList.remove('active'));
      event.target.closest('.session-item').classList.add('active');

      document.getElementById('detailHeader').textContent = `Messages - ${sessionId.slice(-12)}`;
      document.getElementById('messages').innerHTML = '<div class="loading">Loading messages...</div>';

      try {
        const res = await fetch(`/api/sessions/${encodeURIComponent(currentRepo)}/${sessionId}`);
        const data = await res.json();

        const messagesDiv = document.getElementById('messages');

        if (data.messages.length === 0) {
          messagesDiv.innerHTML = '<div class="empty-state">No messages found</div>';
          return;
        }

        messagesDiv.innerHTML = data.messages.map(msg => `
          <div class="message ${msg.type}">
            <div class="message-header">${msg.type === 'user' ? 'You' : 'Claude Code'}</div>
            <div class="message-content">${escapeHtml(msg.content)}</div>
          </div>
        `).join('');

        messagesDiv.scrollTop = messagesDiv.scrollHeight;
      } catch (error) {
        document.getElementById('messages').innerHTML = '<div class="empty-state">Error loading messages</div>';
      }
    }

    function escapeHtml(text) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    loadRepos();
  </script>
</body>
</html>
