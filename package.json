{
  "name": "better-claude-code-root",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@10.22.0",
  "type": "module",
  "scripts": {
    "prepare": "turbo build --filter='./packages/*'",
    "start": "node ./apps/cli/dist/apps/cli/src/main.js",
    "dev": "npm run dev:app",
    "dev:cli": "pnpm --filter=better-claude-code dev",
    "dev:app": "turbo dev --filter='@better-claude-code/backend' --filter='@better-claude-code/frontend' --parallel",
    "dev:vscode": "pnpm --filter=better-claude-code-vscode dev",
    "build": "turbo build",
    "build:vscode": "turbo build --filter=better-claude-code-vscode",
    "typecheck": "turbo typecheck",
    "format": "biome format --write .",
    "lint": "biome check --write .",
    "changeset": "changeset",
    "release": "bash scripts/release.sh"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@changesets/cli": "^2.29.7",
    "tscanner": "^0.0.35",
    "turbo": "^2.5.4"
  }
}
