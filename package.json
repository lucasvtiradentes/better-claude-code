{
  "name": "better-claude-code-root",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@10.20.0",
  "type": "module",
  "scripts": {
    "prepare": "npm run build:packages",
    "start": "node ./apps/cli/dist/cli/main.js",
    "dev": "pnpm --filter better-claude-code dev",
    "dev:app": "pnpm --filter '@better-claude-code/backend' --filter '@better-claude-code/frontend' dev",
    "build": "pnpm build:packages && pnpm build:apps",
    "build:packages": "pnpm --filter './packages/*' build",
    "build:apps": "pnpm --filter '@better-claude-code/backend' build && pnpm --filter '@better-claude-code/frontend' build && pnpm --filter 'better-claude-code' build",
    "typecheck": "pnpm build:packages && pnpm -r typecheck",
    "format": "biome format --write .",
    "lint": "biome check --write .",
    "changeset": "changeset",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@changesets/cli": "^2.29.7"
  }
}
