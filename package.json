{
  "name": "bcc-monorepo",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.20.0",
  "scripts": {
    "dev": "pnpm --filter @bcc/cli dev",
    "dev:backend": "pnpm --filter @bcc/backend dev",
    "dev:frontend": "pnpm --filter @bcc/frontend dev",
    "build": "pnpm -r build",
    "build:cli": "pnpm --filter @bcc/cli build",
    "build:backend": "pnpm --filter @bcc/backend build",
    "build:frontend": "pnpm --filter @bcc/frontend build",
    "typecheck": "pnpm -r typecheck",
    "format": "biome format --write .",
    "lint": "biome check --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@changesets/cli": "^2.29.7"
  }
}
