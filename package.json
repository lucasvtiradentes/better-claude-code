{
	"name": "better-claude-code-vscode",
	"displayName": "Better Claude Code",
	"description": "Manage and analyze Claude Code sessions directly in VS Code",
	"version": "1.0.4",
	"private": true,
	"publisher": "lucasvtiradentes",
	"icon": "resources/icon.png",
	"packageManager": "pnpm@10.22.0",
	"engines": {
		"vscode": "^1.100.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"scripts": {
		"prepare": "husky",
		"build": "tsx esbuild.config.ts",
		"postbuild": "tsx scripts/install-local.ts",
		"dev": "tsx esbuild.config.ts --watch",
		"lint": "biome check .",
		"lint:fix": "biome check --fix --unsafe .",
		"format": "biome format --write .",
		"typecheck": "tsc --noEmit",
		"changeset": "changeset",
		"release": "bash scripts/release.sh",
		"vscode:prepublish": "pnpm run build",
		"vscode:package": "vsce package --no-dependencies",
		"vscode:publish": "vsce publish --no-dependencies",
		"clean": "rimraf out dist-dev node_modules",
		"knip": "knip"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/lucasvtiradentes/better-claude-code.git"
	},
	"bugs": {
		"url": "https://github.com/lucasvtiradentes/better-claude-code/issues"
	},
	"homepage": "https://github.com/lucasvtiradentes/better-claude-code#readme",
	"keywords": [
		"claude",
		"claude-code",
		"ai",
		"sessions",
		"productivity"
	],
	"dependencies": {
		"clsx": "^2.1.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.2",
		"@changesets/cli": "^2.29.7",
		"@tailwindcss/postcss": "^4.1.17",
		"@types/node": "^22.18.8",
		"@types/vscode": "^1.100.0",
		"autoprefixer": "^10.4.22",
		"esbuild": "^0.24.2",
		"esbuild-svelte": "^0.9.4",
		"husky": "^9.1.7",
		"knip": "^5.78.0",
		"lint-staged": "^15.2.11",
		"lucide-svelte": "^0.469.0",
		"postcss": "^8.5.6",
		"rimraf": "^6.0.1",
		"svelte": "^5.46.1",
		"svelte-highlight": "^7.9.0",
		"svelte-preprocess": "^6.0.3",
		"tailwindcss": "^4.1.17",
		"tscanner": "^0.1.3",
		"tsx": "^4.20.6",
		"typescript": "^5.7.3"
	},
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "bccExplorer",
					"title": "Claude Code Sessions",
					"icon": "resources/icon.svg"
				}
			]
		},
		"views": {
			"bccExplorer": [
				{
					"id": "bccSessionExplorer",
					"name": "Sessions",
					"contextualTitle": "Claude Code Sessions"
				},
				{
					"id": "bccCommandsExplorer",
					"name": "Commands",
					"contextualTitle": "Commands"
				},
				{
					"id": "bccSkillsExplorer",
					"name": "Skills",
					"contextualTitle": "Skills"
				},
				{
					"id": "bccAgentsExplorer",
					"name": "Agents",
					"contextualTitle": "Agents"
				}
			]
		},
		"commands": [
			{
				"command": "bcc.refreshSessions",
				"title": "Refresh Sessions",
				"category": "BCC",
				"icon": "$(refresh)"
			},
			{
				"command": "bcc.compactSession",
				"title": "Compact Session",
				"category": "BCC",
				"icon": "$(archive)"
			},
			{
				"command": "bcc.filterSessions",
				"title": "Group Sessions",
				"category": "BCC",
				"icon": "$(group-by-ref-type)"
			},
			{
				"command": "bcc.openSessionFile",
				"title": "Open Session File",
				"category": "BCC"
			},
			{
				"command": "bcc.copySessionPath",
				"title": "Copy Session Path",
				"category": "BCC"
			},
			{
				"command": "bcc.showLogs",
				"title": "Show Logs",
				"category": "BCC",
				"icon": "$(output)"
			},
			{
				"command": "bcc.addLabel",
				"title": "Add Label",
				"category": "BCC",
				"icon": "$(tag)"
			},
			{
				"command": "bcc.toggleCollapseExpand",
				"title": "Toggle Collapse/Expand All Groups",
				"category": "BCC",
				"icon": "$(fold)"
			},
			{
				"command": "bcc.viewCompaction",
				"title": "View Compaction",
				"category": "BCC",
				"icon": "$(eye)"
			},
			{
				"command": "bcc.togglePinSession",
				"title": "Pin/Unpin Session",
				"category": "BCC",
				"icon": "$(pin)"
			},
			{
				"command": "bcc.batchCompact",
				"title": "Compact Selected Sessions",
				"category": "BCC",
				"icon": "$(archive)"
			},
			{
				"command": "bcc.batchDelete",
				"title": "Delete Selected Sessions",
				"category": "BCC",
				"icon": "$(trash)"
			},
			{
				"command": "bcc.batchAddLabel",
				"title": "Add Label to Selected Sessions",
				"category": "BCC",
				"icon": "$(tag)"
			},
			{
				"command": "bcc.toggleCheckSession",
				"title": "Check/Uncheck Session",
				"category": "BCC",
				"icon": "$(check)"
			},
			{
				"command": "bcc.clearAllChecks",
				"title": "Clear All Checks",
				"category": "BCC",
				"icon": "$(clear-all)"
			},
			{
				"command": "bcc.batchOperationsMenu",
				"title": "Batch Operations",
				"category": "BCC",
				"icon": "$(checklist)"
			},
			{
				"command": "bcc.showWorkspaceState",
				"title": "Show Workspace State",
				"category": "BCC"
			},
			{
				"command": "bcc.clearWorkspaceState",
				"title": "Clear Workspace State",
				"category": "BCC"
			},
			{
				"command": "bcc.openCommandFile",
				"title": "Open Command",
				"category": "BCC"
			},
			{
				"command": "bcc.runCommandInTerminal",
				"title": "Run in Terminal",
				"category": "BCC",
				"icon": "$(terminal)"
			},
			{
				"command": "bcc.refreshCommands",
				"title": "Refresh Commands",
				"category": "BCC",
				"icon": "$(refresh)"
			},
			{
				"command": "bcc.openSkillFile",
				"title": "Open Skill",
				"category": "BCC"
			},
			{
				"command": "bcc.refreshSkills",
				"title": "Refresh Skills",
				"category": "BCC",
				"icon": "$(refresh)"
			},
			{
				"command": "bcc.openAgentFile",
				"title": "Open Agent",
				"category": "BCC"
			},
			{
				"command": "bcc.refreshAgents",
				"title": "Refresh Agents",
				"category": "BCC",
				"icon": "$(refresh)"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "bcc.refreshSessions",
					"when": "false"
				},
				{
					"command": "bcc.compactSession",
					"when": "false"
				},
				{
					"command": "bcc.filterSessions",
					"when": "false"
				},
				{
					"command": "bcc.openSessionFile",
					"when": "false"
				},
				{
					"command": "bcc.copySessionPath",
					"when": "false"
				},
				{
					"command": "bcc.addLabel",
					"when": "false"
				},
				{
					"command": "bcc.toggleCollapseExpand",
					"when": "false"
				},
				{
					"command": "bcc.viewCompaction",
					"when": "false"
				},
				{
					"command": "bcc.togglePinSession",
					"when": "false"
				},
				{
					"command": "bcc.batchCompact",
					"when": "false"
				},
				{
					"command": "bcc.batchDelete",
					"when": "false"
				},
				{
					"command": "bcc.batchAddLabel",
					"when": "false"
				},
				{
					"command": "bcc.toggleCheckSession",
					"when": "false"
				},
				{
					"command": "bcc.clearAllChecks",
					"when": "false"
				},
				{
					"command": "bcc.batchOperationsMenu",
					"when": "false"
				},
				{
					"command": "bcc.openCommandFile",
					"when": "false"
				},
				{
					"command": "bcc.runCommandInTerminal",
					"when": "false"
				},
				{
					"command": "bcc.refreshCommands",
					"when": "false"
				},
				{
					"command": "bcc.openSkillFile",
					"when": "false"
				},
				{
					"command": "bcc.refreshSkills",
					"when": "false"
				},
				{
					"command": "bcc.openAgentFile",
					"when": "false"
				},
				{
					"command": "bcc.refreshAgents",
					"when": "false"
				}
			],
			"view/title": [
				{
					"command": "bcc.batchOperationsMenu",
					"when": "view == bccSessionExplorer && bcc.hasCheckedSessions",
					"group": "navigation@1"
				},
				{
					"command": "bcc.refreshSessions",
					"when": "view == bccSessionExplorer",
					"group": "navigation@2"
				},
				{
					"command": "bcc.filterSessions",
					"when": "view == bccSessionExplorer",
					"group": "navigation@3"
				},
				{
					"command": "bcc.toggleCollapseExpand",
					"when": "view == bccSessionExplorer",
					"group": "navigation@4"
				},
				{
					"command": "bcc.refreshCommands",
					"when": "view == bccCommandsExplorer",
					"group": "navigation"
				},
				{
					"command": "bcc.refreshSkills",
					"when": "view == bccSkillsExplorer",
					"group": "navigation"
				},
				{
					"command": "bcc.refreshAgents",
					"when": "view == bccAgentsExplorer",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "bcc.viewCompaction",
					"when": "view == bccSessionExplorer && viewItem == sessionItemWithCompaction",
					"group": "inline@1"
				},
				{
					"command": "bcc.addLabel",
					"when": "view == bccSessionExplorer && viewItem == sessionItemWithCompaction",
					"group": "inline@2"
				},
				{
					"command": "bcc.togglePinSession",
					"when": "view == bccSessionExplorer && viewItem == sessionItemWithCompaction",
					"group": "inline@3"
				},
				{
					"command": "bcc.toggleCheckSession",
					"when": "view == bccSessionExplorer && viewItem == sessionItemWithCompaction",
					"group": "inline@4"
				},
				{
					"command": "bcc.compactSession",
					"when": "view == bccSessionExplorer && viewItem == sessionItem",
					"group": "inline@1"
				},
				{
					"command": "bcc.addLabel",
					"when": "view == bccSessionExplorer && viewItem == sessionItem",
					"group": "inline@2"
				},
				{
					"command": "bcc.togglePinSession",
					"when": "view == bccSessionExplorer && viewItem == sessionItem",
					"group": "inline@3"
				},
				{
					"command": "bcc.toggleCheckSession",
					"when": "view == bccSessionExplorer && viewItem == sessionItem",
					"group": "inline@4"
				},
				{
					"command": "bcc.toggleCheckSession",
					"when": "view == bccSessionExplorer && viewItem == sessionItemChecked",
					"group": "inline@1"
				},
				{
					"command": "bcc.batchCompact",
					"when": "view == bccSessionExplorer && (viewItem == sessionItem || viewItem == sessionItemWithCompaction)",
					"group": "2_batch@1"
				},
				{
					"command": "bcc.batchDelete",
					"when": "view == bccSessionExplorer && (viewItem == sessionItem || viewItem == sessionItemWithCompaction)",
					"group": "2_batch@2"
				},
				{
					"command": "bcc.batchAddLabel",
					"when": "view == bccSessionExplorer && (viewItem == sessionItem || viewItem == sessionItemWithCompaction)",
					"group": "2_batch@3"
				},
				{
					"command": "bcc.openSessionFile",
					"when": "view == bccSessionExplorer && (viewItem == sessionItem || viewItem == sessionItemWithCompaction)",
					"group": "3_navigation@1"
				},
				{
					"command": "bcc.copySessionPath",
					"when": "view == bccSessionExplorer && (viewItem == sessionItem || viewItem == sessionItemWithCompaction)",
					"group": "3_navigation@2"
				},
				{
					"command": "bcc.runCommandInTerminal",
					"when": "view == bccCommandsExplorer && viewItem =~ /commandItem/",
					"group": "inline"
				}
			]
		},
		"keybindings": []
	}
}
