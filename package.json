{
  "name": "better-claude-code-root",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@10.22.0",
  "type": "module",
  "scripts": {
    "prepare": "turbo build --filter='./packages/*'",
    "dev": "pnpm --filter=better-claude-code-vscode dev",
    "build": "turbo build",
    "build:vscode": "turbo build --filter=better-claude-code-vscode",
    "typecheck": "turbo typecheck",
    "format": "biome format --write .",
    "lint": "biome check --write .",
    "changeset": "changeset",
    "release": "bash scripts/release.sh"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@changesets/cli": "^2.29.7",
    "tscanner": "^0.1.3",
    "turbo": "^2.5.4"
  }
}
