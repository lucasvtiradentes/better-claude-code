{
  "name": "better-claude-code-root",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@10.20.0",
  "type": "module",
  "scripts": {
    "start": "node ./apps/cli/dist/cli/cli.js",
    "dev": "pnpm --filter better-claude-code dev",
    "build": "pnpm build:shared && pnpm build:backend && pnpm build:frontend && pnpm build:cli",
    "build:shared": "pnpm --filter @better-claude-code/shared build",
    "build:cli": "pnpm --filter better-claude-code build",
    "build:backend": "pnpm --filter @better-claude-code/backend build",
    "build:frontend": "pnpm --filter @better-claude-code/frontend build",
    "typecheck": "pnpm build:shared && pnpm -r typecheck",
    "format": "biome format --write .",
    "lint": "biome check --write .",
    "changeset": "changeset",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@changesets/cli": "^2.29.7"
  }
}
