{
  "$schema": "https://turbo.build/schema.json",
  "globalPassThroughEnv": ["DISPLAY", "XAUTHORITY", "DBUS_SESSION_BUS_ADDRESS"],
  "remoteCache": {
    "enabled": true
  },
  "tasks": {
    "typecheck": {
      "outputLogs": "new-only",
      "inputs": [
        "./src/**",
        "./*.config.*",
        "./tsconfig.json",
        "./package.json"
      ]
    },
    "build": {
      "outputLogs": "new-only",
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "better-claude-code-vscode#build": {
      "outputLogs": "new-only",
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "out/**"
      ]
    },
    "dev": {
      "outputLogs": "full",
      "cache": false,
      "persistent": true,
      "env": [
        "NODE_ENV"
      ]
    },
    "start": {
      "outputLogs": "full",
      "dependsOn": [
        "^build"
      ],
      "cache": false,
      "persistent": true
    },
    "format": {
      "outputLogs": "new-only",
      "cache": false
    },
    "lint": {
      "outputLogs": "new-only",
      "cache": false
    }
  }
}
